<div class="container">
  <div class="row vertical-align centering">
    <div class="col-md-6 col-md-offset-3">

      <div id="main">
        <%= image_tag 'logo.png' %>
        <div class="full_w">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="field">
          <%= f.label :signin %>
          <%= f.text_field :signin, :autofocus => true, class: 'text' %> 
          <label for="UserUsername"></label>
        </div>
        <div class="field">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "off",  class: 'text' %>
          <label for="UserPassword"></label>
        </div>

        <% if devise_mapping.rememberable? -%>

        <div class="field">
          <div class="row">
          <div class="col-md-3">
          <%= f.label :remember_me, style: 'float:left' %>
          <%= f.check_box :remember_me %>
          </div>
          <div class="col-md-9">
          <%= render "devise/shared/links" %>
          </div> 
        </div>

        <% end %>

        <div class="sep"></div>
        <div class="actions">
          <%= f.submit "Log in", class: 'ok' %>
        </div>

        <% end %>

              
        </div>
        <!-- <div style="text-align: center;" class="noprint" id="footer">
          FRESH STUDIO &copy;2013
        </div>   -->
        <%= notice %>
        <%= alert %>

        

    </div>
    <div style="text-align: center;" class="noprint" id="footer">
          FRESH STUDIO &copy;2013
        </div>  

  </div>
</div>