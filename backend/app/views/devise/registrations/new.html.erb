<div class="container">
  <div class="row vertical-align centering">
    <div class="col-md-6 col-md-offset-3">
      <div id="main">
      <h1 class='center_text'>Sign up <%= resource_name.to_s.humanize %></h1>
        <br>
        <div class="full_w">

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <%= f.label :username %><br />
            <%= f.text_field :username, autofocus: true ,  class: 'text' %>
          </div>

          <div class="field">
            <%= f.label :name %><br />
            <%= f.text_field :name, autofocus: true , class: 'text' %>
          </div>

          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true , class: 'text' %>
          </div>

          <div class="field">
            <%= f.label :password %>
            <% if @validatable %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off" , class: 'text' %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off" , class: 'text'  %>
          </div>
          <div class="row">
          <div class="col-md-10">
          <div class="actions">
            <%= f.submit "Sign up", class: 'ok'  %>
          </div>
          <% end %>
          </div>
          <div class="col-md-2">
          <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>